extends layout1

block content
    .w3-container.w3-center.w3-round-large(style="color: #000000ad!important;background-color: #c5c1aeb5;position: absolute;top: 40%;left: 50%;transform: translate(-50%, -50%);")
        .centerCard
            header 
                h3 Registo
            form.w3-container(action='/api/registo' method='POST')
                label Username:
                input.w3-input(type="text" name="username")
                label Password:
                input.w3-input(type="password" name="password")
                label Tipo De Utilizador
                select.w3-select(name="level")
                    option(value="0" checked) Aluno
                    option(value="1") Professor 
                    
                input.w3-btn.w3-margin(style="background-color: #222221;margin-top: 20px;color: white;" type="submit" value="Enviar")

        
