extends layout

block content      
    .centerCard
        h2.w3-center(style="color: black;") 
            b Editar Utilizador
        .w3-container.w3-center.w3-round-large(style="border: solid  #527F52;")
            form.w3-container.w3-margin(class='w3-container' method='POST' action='/admin/users/update/'+user._id)
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                       label Id
                    .w3-col.s9.w3-border
                       input.w3-input(type='text' value=user._id readonly)
    
                .w3-row.w3-margin-bottom
                   .w3-col.s3
                       label Username
                   .w3-col.s9.w3-border
                       input.w3-input.w3-margin-bottom(type='text' value=user.username readonly)
                       input.w3-input(type='text' name='username' placeholder="Novo username (caso n達o pretenda mudar n達o preencha)")

                .w3-row.w3-margin-bottom
                    .w3-col.s3
                       label Password
                    .w3-col.s9
                        .w3-col.s10.w3-border
                            input.w3-input(type='password' value=user.password id="myPass" readonly)
                        .w3-col.s2.w3-margin-bottom
                            button.w3-button(type='button' onclick="showPass()" style="background-color:grey !important;color: white;") Mostrar
                        input.w3-input(type='password' name='password' placeholder="Nova password (caso n達o pretenda mudar n達o preencha)")
                        
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                       label Tipo De Utilizador
                    .w3-col.s9.w3-border
                       select.w3-select(name="level")
                            if user.level == 0 
                                option(value="0" checked) Aluno
                                option(value="1" ) Professor 
                                option(value="2" ) Administrador
                            else if user.level == 1
                                option(value="1" checked) Professor
                                option(value="0") Aluno
                                option(value="2" ) Administrador
                            else if  user.level == 2
                                option(value="2" checked) Administrador
                                option(value="0") Aluno
                                option(value="1" ) Professor 

                           
                .w3-row.w3-margin-top
                    input.w3-btn.w3-teal(type='submit' value='Atualizar' style="background-color: #527F52 !important;margin-top: 20px;color: white;" )

            

                

            

