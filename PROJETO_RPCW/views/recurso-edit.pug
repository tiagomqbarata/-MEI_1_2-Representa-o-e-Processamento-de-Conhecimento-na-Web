
extends layout

block content
    .centerCard
        h2.w3-center(style="color: black;") 
            b Editar Recurso
        .w3-card-4.modal(id="display")
        .w3-container.w3-center.w3-round-large(style="border: solid  #527F52;background-color: #F7F8FA; margin-bottom: 80px;")
            form.w3-container.w3-margin(class='w3-container' method='POST' action='/recursos/edit/'+rec._id )
                .w3-row.w3-margin-bottom.w3-padding-16(style="padding-right: 16px;")
                    .w3-col.s3
                       b
                            label.w3-left.w3-margin Nome do Recurso
                    .w3-col.s9
                       input.w3-input.w3-margin-bottom(type='text' value=rec.name readonly)
                       input.w3-input(type='text' name='name' placeholder="Novo nome (caso não pretenda mudar não preencha)")
                    
                hr(style="border: 1px dotted #527F52;")
                    
                .w3-row.w3-margin-bottom
                    .w3-col.s3(style=' padding-top: 10px;')
                        b
                            label.w3-left.w3-margin Tipo De Recurso
                    .w3-col.s9.w3-border
                        select.w3-select(name="type")
                            if rec.type == 0
                                option(value="0" checked) Slides
                                option(value="1") Exame     
                                option(value="2") Manual
                                option(value="3") Relatório
                                option(value="4") Tese
                            else if rec.type == 1
                                option(value="1" checked) Exame     
                                option(value="0") Slides
                                option(value="2") Manual
                                option(value="3") Relatório
                                option(value="4") Tese
                            else if rec.type == 2
                                option(value="2" checked) Manual
                                option(value="1") Exame     
                                option(value="0") Slides
                                option(value="3") Relatório
                                option(value="4") Tese 
                            else if rec.type == 3  
                                option(value="3" checked) Relatório
                                option(value="2") Manual
                                option(value="1") Exame     
                                option(value="0") Slides
                                option(value="4") Tese  
                            else  
                                option(value="4" checked) Tese 
                                option(value="3") Relatório
                                option(value="2") Manual
                                option(value="1") Exame     
                                option(value="0") Slides
                hr(style="border: 1px dotted #527F52;")
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                       b
                            label.w3-left.w3-margin Autor
                    .w3-col.s9
                       input.w3-input.w3-margin-bottom(type='text' value=rec.producer readonly)
                       input.w3-input(type='text' name='producer' placeholder="Novo autor (caso não pretenda mudar não preencha)")
                
                hr(style="border: 1px dotted #527F52;")
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        b
                            label.w3-left.w3-margin Data de criação do conteúdo
                    .w3-col.s9(style="width: 166px;")
                       input.w3-input(type='text' value=dCriacao readonly)
                       input.w3-input(type='date' name='creation_date' )
                
                hr(style="border: 1px dotted #527F52;")
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        b
                            label.w3-left.w3-margin Descrição
                    .w3-col.s9
                       if rec.desc==' '
                            p.w3-left Sem descrição
                       else 
                            p.w3-left #{rec.desc}
                       textarea(rows="3" cols="95" name="desc") 
                
                hr(style="border: 1px dotted #527F52;")
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                       b
                        label.w3-left.w3-margin Recurso 

                    .w3-col.s2
                        a.w3-btn.w3-green( href="http://localhost:8000/"+rec.path.substring(68) target='_blank' rel="noopener noreferrer") Ver
                    .w3-col.s2    
                        a.w3-btn.w3-green( href="http://localhost:8000/download/"+rec._id ) Download

                
                .w3-row.w3-margin-top
                    input.w3-btn.w3-teal(type='submit' value='Concluído' style="background-color: #527F52 !important;margin-top: 20px;color: white;" )